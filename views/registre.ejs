<section class="signup">
  <div class="container">
    <div class="signup-content">
      <div class="signup-form">
        <h2 class="form-title">Sign up</h2>
        <% if(error_msg != ''){ %>
        <p class="err_msg"> <%= error_msg %> </p>
        <% } %>
        
        <% if(success_msg != ''){ %>
        <p class="success_msg"> <%= success_msg %> </p>
        <% } %>
        <form style="margin-bottom: 8px;" method="POST" action="/users/registre" class="register-form" id="register-form">
          <div class="form-group">
            <label for="firstname"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input type="text" name="firstname" id="firstname"  value="<%= typeof firstname != 'undefined' ? firstname : '' %>" placeholder="First name" required />
          </div>
          <div class="form-group">
            <label for="lastname"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input type="text" name="lastname" id="lastname"  value="<%= typeof lastname != 'undefined' ? lastname : '' %>" placeholder="Last name" required />
          </div>
          <div class="form-group">
            <label for="Username"><i class="zmdi zmdi-account material-icons-name"></i></label>
            <input type="text" name="username" id="Username"  value="<%= typeof username != 'undefined' ? username : '' %>" placeholder="Username" required />
          </div>
          <div class="form-group">
            <label for="email"><i class="zmdi zmdi-email"></i></label>
            <input type="email" name="email" id="email"  value="<%= typeof email != 'undefined' ? email : '' %>" placeholder="Email" required />
          </div>
          <div class="form-group">
            <label for="pass"><i class="zmdi zmdi-lock"></i></label>
            <input type="password" pattern="(?=.*\d)(?=.*[a-zA-Z]).{8,}" id="psw" name="password" 
              placeholder="Password" title="Must contain at least one number and one letter, and at least 8 or more characters"
              required Autocomplete />
          </div>
          <div class="form-group">
            <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
            <input type="password" name="password2" id="re_pass"  placeholder="Repeat your password"
              required Autocomplete />
          </div>
          <div class="form-group form-button">
            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
          </div>
        </form>
      </div>
      <div class="signup-image">
        <figure>
          <img src="/img/signup.png" alt="sing up image" />
        </figure>
        <a href="/users/login" class="signup-image-link">I am already member</a>
      </div>
    </div>
  </div>
</section>